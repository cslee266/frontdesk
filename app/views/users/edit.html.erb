<h1>Edit Your Profile</h1>

<% if @user.avatar %>

<%= image_tag @user.avatar.thumb.to_s %>

<% end %>

  <%= form_for @user, html: { multipart: true } do |form| %>
	
  	<%= form.label :name %>
  	<%= form.text_field :name %>
    
    <%= form.label :email %>
  	<%= form.text_field :email, type: 'email' %>

  	<%= form.label :avatar %>
  	<%= form.file_field :avatar %>

  	<%= form.submit "Save changes" %>
  <% end %>
